@model MVC_Project.Models.ViewModel.HomeDashboardViewModel

@{
    ViewData["Title"] = "Dashboard - Home";
}
<h1 style="text-align:center; padding:15px 0px 35px 0px;">Welcome to the Company Dashboard</h1>

<div class="row text-center mb-4">
    <div class="col">
        <div class="card text-dark border">
            <div class="card-body">
                <h5 class="card-title">Total Employees</h5>
                <p class="card-text display-6">@Model.EmployeeCount</p>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card text-dark border">
            <div class="card-body">
                <h5 class="card-title">Departments</h5>
                <p class="card-text display-6">@Model.DepartmentCount</p>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <h5 class="card-title">Projects</h5>
                <p class="card-text display-6">@Model.ProjectCount</p>
            </div>
        </div>
    </div>
</div>

<h3 class="mt-5">Recently Joined Employees</h3>
<div class="row">
    @foreach (var emp in Model.RecentEmployees)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5>@emp.Name</h5>
                    <p class="text-muted">@emp.Department?.Name</p>
                    <p>Email: @(string.IsNullOrEmpty(emp.Email) ? "N/A" : emp.Email)</p>
                    <p>Phone: @(string.IsNullOrEmpty(emp.Phone) ? "N/A" : emp.Phone)</p>
                </div>
            </div>
        </div>
    }
</div>

<h3 class="mt-5">Projects per Department</h3>
<ul class="list-group">
    @for (int i = 0; i < Model.ProjectDepartmentNames.Count; i++)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            @Model.ProjectDepartmentNames[i]
            <span class="badge bg-secondary rounded-pill">@Model.ProjectCounts[i]</span>
        </li>
    }
</ul>
