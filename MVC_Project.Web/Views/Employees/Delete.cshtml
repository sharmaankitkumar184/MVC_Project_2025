@model MVC_Project.Models.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-5">
    <h1 class="text-center text-danger mb-4">Delete Employee</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirm Deletion</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-center mb-4">Are you sure you want to delete this employee?</h5>
                    <dl class="row">
                        <dt class="col-sm-3 font-weight-bold">Full Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3 font-weight-bold">Employee ID</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.EmployeeCode)</dd>

                        <dt class="col-sm-3 font-weight-bold">Designation</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DateOfBirth)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger w-100 mb-2">
                            Delete
                            <i class="fas fa-trash-alt ms-2"></i> <!-- Font Awesome trash icon -->
                        </button>
                    </form>

                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
