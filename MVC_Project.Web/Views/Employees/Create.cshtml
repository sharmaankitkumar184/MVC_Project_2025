@using MVC_Project.Models.Models
@model MVC_Project.Models.Models.Employee



@{
    ViewData["Title"] = "Create Employee";
}

<div class="container mt-5 mb-5">
    <h1 class="text-center text-primary mb-4">Create New Employee</h1>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Employee Information</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Employees" asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Name" class="form-label">Full Name</label>
                                    <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter employee name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="EmployeeCode" class="form-label">Employee Code</label>
                                    <input asp-for="EmployeeCode" class="form-control shadow-sm" placeholder="Enter employee code" />
                                    <span asp-validation-for="EmployeeCode" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control shadow-sm" placeholder="Enter employee email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Phone" class="form-label">Phone</label>
                                    <input asp-for="Phone" class="form-control shadow-sm" placeholder="Enter phone number" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                                    <input asp-for="DateOfBirth" type="date" class="form-control shadow-sm" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Gender" class="form-label">Gender</label>
                                    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control shadow-sm">
                                        <option value="">-- Select Gender --</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="DepartmentId" class="form-label">Department</label>
                                    <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="form-control shadow-sm">
                                        <option value="">-- Select Department --</option>
                                    </select>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="input-group" style="margin-bottom: 15px;">
                                <select asp-for="AddressId" asp-items="ViewBag.Addresses" class="form-control shadow-sm">
                                    <option value="">-- Select Address (Optional) --</option>
                                </select>
                                <button type="button" class="btn btn-outline-primary ms-2 rounded-pill px-3"
                                        data-bs-toggle="modal" data-bs-target="#addAddressModal" title="Add New Address">
                                    <i class="fas fa-plus me-1"></i> Add
                                </button>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <button type="submit" class="btn btn-primary w-100 shadow-sm">Create</button>
                        </div>
                    </form>

                    @await Html.PartialAsync("/Views/PartialModels/_CreateAddressByEmployeeModel.cshtml")
                </div>

                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


